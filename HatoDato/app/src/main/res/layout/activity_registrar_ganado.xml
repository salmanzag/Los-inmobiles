<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Contenido con scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Back -->

            <!-- Título -->

            <!-- ===== TARJETA: CEBA ===== -->

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/cd_back"
                android:padding="6dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_back"
                app:tint="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextAppearance.Material3.DisplaySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="8dp"
                android:shadowColor="#55000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="6"
                android:text="@string/mi_ganado"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ceba"
                android:layout_width="315dp"
                android:layout_height="151dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.75"
                        android:contentDescription="@string/cd_bg_ceba"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_ceba" />

                    <!-- Oscurecer parte inferior -->

                    <!-- Botones inferiores -->

                    <TextView
                        style="@style/TextAppearance.Material3.HeadlineLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="81dp"
                        android:layout_gravity="center"
                        android:text="@string/ceba"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:layout_gravity="bottom"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_ceba_registrar"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="@string/registrar"
                            android:textSize="10sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_ceba_lotes"
                            style="@style/CardView"
                            android:layout_width="78dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="5dp"
                            android:text="@string/lotes"
                            android:textSize="10sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_ceba_salida"
                            style="@style/CardView"
                            android:layout_width="78dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="5dp"
                            android:text="@string/salida"
                            android:textSize="10sp" />

                    </LinearLayout>
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ceba_analitica"
                    style="@style/CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/analitica"
                    android:textSize="10sp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== TARJETA: LEVANTE ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_levante"
                android:layout_width="315dp"
                android:layout_height="151dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.75"
                        android:src="@drawable/bg_levante"
                        android:contentDescription="@string/cd_bg_levante"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/overlay_bottom_gradient"/>

                    <TextView
                        style="@style/TextAppearance.Material3.HeadlineLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="71dp"
                        android:layout_gravity="center"
                        android:text="@string/levante"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="start">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_levante_registrar"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="@string/registrar"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_levante_lotes"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="@string/lotes"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_levante_analitica"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="@string/analitica"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ===== TARJETA: CRÍA ===== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cria"
                android:layout_width="315dp"
                android:layout_height="151dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:alpha="0.75"
                        android:src="@drawable/bg_cria"
                        android:contentDescription="@string/cd_bg_cria"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/overlay_bottom_gradient"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cr_a"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.Material3.HeadlineLarge"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="start">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cria_madre"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="@string/madre"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cria_nacimiento"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="@string/nacimiento"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cria_lotes"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="@string/lotes"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cria_analitica"
                            style="@style/CardView"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:textSize="10sp"
                            android:text="@string/analitica"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_bottom_nav_top_rounded"
        app:menu="@menu/menu_main"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
