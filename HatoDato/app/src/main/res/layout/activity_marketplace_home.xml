<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- CONTENIDO SCROLL -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bg_header_rounded">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_white"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="@string/marketplace"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:shadowColor="#66000000"
                    android:shadowDx="0" android:shadowDy="3" android:shadowRadius="6"
                    style="@style/TextAppearance.Material3.DisplaySmall"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="14dp"
                    android:text="@string/comprador"
                    android:textStyle="bold"
                    android:textColor="@color/orange_HD"
                    style="@style/TextAppearance.Material3.TitleMedium"/>
            </FrameLayout>

            <!-- BUSCADOR -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_search"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:startIconDrawable="@drawable/ic_search"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/buscar"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- BANNER -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/navy_blue">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_banner_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/premiun"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        style="@style/TextAppearance.Material3.TitleLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/img_banner"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_banner_sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/la_mejor_calida_del_mercado_solo_aqu"
                        android:textColor="@android:color/white"
                        android:alpha="0.9"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/img_banner"
                        app:layout_constraintTop_toBottomOf="@id/tv_banner_title"/>

                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="96dp"
                        android:layout_height="0dp"
                        android:contentDescription="@string/cd_banner_prod"
                        android:src="@drawable/img_promo_bag"
                        android:scaleType="centerInside"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CATEGORÍAS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/categorias"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.TitleMedium"/>

                <TextView
                    android:id="@+id/btn_cats_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_m_s"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.6"
                    style="@style/TextAppearance.Material3.LabelLarge"/>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:paddingHorizontal="8dp"
                android:fillViewport="false"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Item Medicina -->
                    <LinearLayout
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_category_circle">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cat_medicinas"
                                android:contentDescription="@string/medicinas"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/medicinas"
                            style="@style/TextAppearance.Material3.LabelMedium"/>
                    </LinearLayout>

                    <!-- Item Suplementos -->
                    <LinearLayout
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_category_circle">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cat_suplementos"
                                android:contentDescription="@string/suplementos"/>
                        </FrameLayout>

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="84dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/suplementos" />
                    </LinearLayout>

                    <!-- Item Comida -->
                    <LinearLayout
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_category_circle">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cat_comida"
                                android:contentDescription="@string/comida"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/comida"
                            style="@style/TextAppearance.Material3.LabelMedium"/>
                    </LinearLayout>

                    <!-- Item Otros -->
                    <LinearLayout
                        android:layout_width="84dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_category_circle">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cat_otros"
                                android:contentDescription="@string/otros"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/otros"
                            style="@style/TextAppearance.Material3.LabelMedium"/>
                    </LinearLayout>

                    <!-- Repite cambiando icono/etiqueta -->
                    <include layout="@layout/item_categoria_small"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- RECOMENDACIONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/recomendaciones"
                    android:textStyle="bold"
                    style="@style/TextAppearance.Material3.TitleMedium"/>

                <TextView
                    android:id="@+id/btn_reco_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_m_s"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.6"
                    style="@style/TextAppearance.Material3.LabelLarge"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:weightSum="2">

                <!-- Card producto 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_windrain"
                            android:contentDescription="@string/cd_prod_1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Wind And Rain Purina"
                            style="@style/TextAppearance.Material3.BodyMedium"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$ 78.900 Kg"
                            android:textStyle="bold"
                            style="@style/TextAppearance.Material3.TitleMedium"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_buy_1"
                            style="@style/CardView"
                            android:layout_marginTop="8dp"
                            android:text="@string/comprar"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card producto 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_superlactancia"
                            android:contentDescription="@string/cd_prod_2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Super Lactancia 18 % Mor"
                            style="@style/TextAppearance.Material3.BodyMedium"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$ 198.900 Kg"
                            android:textStyle="bold"
                            style="@style/TextAppearance.Material3.TitleMedium"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_buy_2"
                            style="@style/CardView"
                            android:layout_marginTop="8dp"
                            android:text="@string/comprar"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_bottom_nav_top_rounded"
        app:menu="@menu/menu_main"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
