<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- CONTENIDO SCROLL -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bg_header_rounded">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:scaleType="centerInside"
                    android:tint="@android:color/white"
                    android:contentDescription="@string/cd_back"
                    app:srcCompat="@drawable/ic_back"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/ceba"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:shadowColor="#66000000"
                    android:shadowDx="0" android:shadowDy="3" android:shadowRadius="6"
                    style="@style/TextAppearance.Material3.DisplaySmall"/>
            </FrameLayout>

            <!-- ====== CARD: CONSUMO ALIMENTICIO POR LOTE ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/consumo_por_lote"
                        android:gravity="center"
                        style="@style/TextAppearance.Material3.TitleSmall"/>

                    <!-- Gráfica (MPAndroidChart) -->
                    <!-- <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_consumo"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="8dp"/> -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:alpha="0.6"
                        style="@style/TextAppearance.Material3.LabelSmall"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== CARD: COSTOS DE ALIMENTACIÓN ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/costos_alimentacion"
                        android:gravity="center"
                        style="@style/TextAppearance.Material3.TitleSmall"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_info_group"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_marginTop="8dp">

                        <!-- Fila: Concentrado -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/concentrado"
                                android:background="@drawable/chip_orange"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                style="@style/TextAppearance.Material3.LabelLarge"/>

                            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:text="$36,000"
                                    style="@style/TextAppearance.Material3.TitleMedium"/>
                                <TextView
                                    android:text="40%"
                                    android:alpha="0.6"
                                    style="@style/TextAppearance.Material3.LabelSmall"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Fila: Forraje -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:text="@string/forraje"
                                android:background="@drawable/chip_navy"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                style="@style/TextAppearance.Material3.LabelLarge"/>

                            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView android:text="$27,000" style="@style/TextAppearance.Material3.TitleMedium"/>
                                <TextView android:text="30%" android:alpha="0.6" style="@style/TextAppearance.Material3.LabelSmall"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Fila: Suplementos -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:text="@string/suplementos"
                                android:background="@drawable/chip_blue"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                style="@style/TextAppearance.Material3.LabelLarge"/>

                            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView android:text="$18,000" style="@style/TextAppearance.Material3.TitleMedium"/>
                                <TextView android:text="20%" android:alpha="0.6" style="@style/TextAppearance.Material3.LabelSmall"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Fila: Otros -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:text="@string/otros"
                                android:background="@drawable/chip_green"
                                android:textColor="@android:color/white"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                style="@style/TextAppearance.Material3.LabelLarge"/>

                            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView android:text="$9,000" style="@style/TextAppearance.Material3.TitleMedium"/>
                                <TextView android:text="10%" android:alpha="0.6" style="@style/TextAppearance.Material3.LabelSmall"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Total -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="10dp"
                            android:background="#22000000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:text="@string/total"
                                android:textStyle="bold"
                                style="@style/TextAppearance.Material3.BodyLarge"/>

                            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                            <TextView
                                android:text="$90,000"
                                android:textStyle="bold"
                                style="@style/TextAppearance.Material3.TitleMedium"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== CARD: TIEMPO PROMEDIO HASTA PESO DE VENTA ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tiempo_promedio_venta"
                        android:gravity="center"
                        style="@style/TextAppearance.Material3.TitleSmall"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:background="@drawable/box_metric_outline">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:text="15"
                                android:textStyle="bold"
                                style="@style/TextAppearance.Material3.DisplaySmall"/>

                            <TextView
                                android:text="@string/meses"
                                android:textAllCaps="true"
                                style="@style/TextAppearance.Material3.TitleSmall"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/peso_objetivo_450"
                        android:gravity="center"
                        android:alpha="0.6"
                        style="@style/TextAppearance.Material3.LabelSmall"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="match_parent" android:layout_height="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_bottom_nav_top_rounded"
        app:menu="@menu/menu_main"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
