<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->

        <!-- CHIP/ETIQUETA "BIENVENIDO" superpuesta al header -->
        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#26344D">

            <TextView
                android:id="@+id/title_brand"
                style="@style/TextAppearance.Material3.DisplaySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="#66000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="4"
                android:text="@string/HATODATO"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chip_welcome"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:minHeight="0dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="@string/bienvenido"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            app:backgroundTint="#D76908"/>

        <!-- Texto guÃ­a -->

        <!-- CARD: VENDEDOR -->
        <TextView
            android:id="@+id/tv_prompt"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="65dp"
            android:text="@string/ingrese_el_tipo_de_usuario_que_desea"
            android:textColor="?attr/colorOnSurface" />

        <!-- CARD: GANADERO -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_vendedor"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="75dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/cd_vendedor"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_vendedor"
                    android:tint="?attr/colorOnSurface" />

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/vendedor"
                    android:textAllCaps="true"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_ganadero"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="75dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/cd_ganadero"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_ganadero"
                    android:tint="?attr/colorOnSurface" />

                <TextView
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Ganadero"
                    android:textAllCaps="true"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pie / lema -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/somos_hatodato"
                android:textStyle="bold"
                android:textColor="#D76908"
                style="@style/TextAppearance.Material3.LabelLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="@string/tu_mejor_compa_ero_con_bovinos"
                android:textColor="?attr/colorOnSurface"
                style="@style/TextAppearance.Material3.BodySmall"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
